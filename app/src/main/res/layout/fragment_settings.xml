<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/gr_bg_settings"
    android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rg_search_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_text" />

            <RadioButton
                android:id="@+id/rb_yandex"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yandex_text" />

            <RadioButton
                android:id="@+id/rb_bing"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bing_text" />

        </RadioGroup>




</LinearLayout>